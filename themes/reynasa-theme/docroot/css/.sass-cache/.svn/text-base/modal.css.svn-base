.aui .modalDialog {
  position: fixed;
  font-size: 1.3em;
  top: 0;
  right: 0;
  bottom: 0;
  left: 0;
  background: rgba(0, 0, 0, 0.4);
  z-index: 99999;
  opacity: 0;
  -webkit-transition: opacity 400ms ease-in;
  -moz-transition: opacity 400ms ease-in;
  transition: opacity 400ms ease-in;
  pointer-events: none; }
.aui .modalDialog:target {
  opacity: 1;
  pointer-events: auto; }
.aui .modalDialog > div {
  max-width: 80%;
  position: relative;
  margin-right: auto;
  margin-left: auto;
  margin-top: 2%;
  padding: 5px 20px 13px 20px;
  max-height: 80%;
  overflow: hidden;
  background: rgba(255, 255, 255, 0.84); }
.aui .modalDialog img {
  margin-bottom: 3%; }
.aui .closepop {
  background: #606061;
  color: #FFFFFF;
  line-height: 16px;
  position: absolute;
  right: -12px;
  text-align: center;
  top: -10px;
  width: 14px;
  text-decoration: none;
  font-weight: bold;
  -webkit-border-radius: 12px;
  -moz-border-radius: 12px;
  border-radius: 12px;
  -moz-box-shadow: 1px 1px 3px #000;
  -webkit-box-shadow: 1px 1px 3px #000;
  box-shadow: 1px 1px 3px #000;
  opacity: 0.8;
  font-size: 12px; }
.aui .closepop:hover {
  background: #7f7f7f; }

.popup {
  margin: 2%; }

